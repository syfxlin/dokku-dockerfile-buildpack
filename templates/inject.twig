{% macro inject(commands = []) %}
{% for command in commands %}
{% if command starts with 'add:' %}
ADD {{ command[4:] }}
{% elseif command starts with 'copy:' %}
COPY {{ command[5:] }}
{% elseif command starts with 'arg:' %}
ARG {{ command[4:] }}
{% elseif command starts with 'env:' %}
ENV {{ command[4:] }}
{% elseif command starts with 'expose:' %}
EXPOSE {{ command[7:] }}
{% elseif command starts with 'run:' %}
RUN {{ command[4:] }}
{% else %}
RUN {{ command }}
{% endif %}
{% endfor %}
{% endmacro %}
